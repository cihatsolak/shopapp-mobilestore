@using ShopApp.Core.Domain.Products
@model Product

<div class="col-md-4">
    <div class="card mb-3">
        <img src="~/img/@Model.ImageUrl" class="pt-2" alt="@Model.Name" style="max-height:300px; max-width:200px;" />
        <div class="card-body">
            <h4 class="card-title">
                <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
            </h4>
            <small class="text-muted">
                <i class="fas fa-lira-sign"></i> @Model.Price
            </small>
        </div>
        <div class="card-footer text-center">
            <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">Detay</a>
           
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Cart" asp-action="Add" method="post" style="display:inline">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    @*<input type="hidden" name="quantity" value="1" />*@
                    <button type="submit" class="btn btn-outline-primary btn-sm ml-3">Sepete Ekle</button>
                </form>
            }
        </div>
    </div>
</div>